{% extends 'layout.html.twig' %}

{% block title %}Listado de tareas{% endblock %}

{% block content %}
  <h1>Listado de tareas</h1>
  {% if tasks|length > 0 %}
  <table class="table table-condensed">
    <thead><tr><th>Nombre</th><th>Subtareas</th><th>Estado</th><th>Acciones</th></tr></thead>
    <tbody>
      {% for task in tasks %}
      <tr>
        <td><span>{{ task.name }}</span></td>
        <td>
            {% for item in task.items %}
              <span class="label label-info">{{ item.name }}</span>
            {% endfor %}
        </td>
        <td><span class="label">{{ task.state }}</span></td>
        <td>
            <a href="/app.php/task/{{ task.name }}/show"><i class="icon-eye-open"></i></a>
            <a href="/app.php/task/{{ task.name }}/delete"><i class="icon-trash"></i></a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}
{% endblock %}
